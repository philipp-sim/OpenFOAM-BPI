castellatedMeshControls
{
    maxLocalCells 100000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 5;

    features
    (
        /*{
            file        "couple.eMesh";
            level       2;
        }
        {
            file        "rotorBlades.eMesh";
            level       2;
        }*/
        {
            file        "walls.eMesh";
            level       3;
        }
        {
            file        "window.eMesh";
            level       4;
        }
        {
            file        "atmosphere_outlet.eMesh";
            level       2;
        }
        {
            file        "innerInlet.eMesh";
            level       2;
        }
    );

    refinementSurfaces
    {
        emission_zone
        {
            level (2 8);
            faceZone    emissionzone;
            cellZone    emissionzone;
            cellZoneInside inside;
            boundary    internal;
        }

        couple
        {
            level       (1 1);
            faceZone    couple;
            cellZone    rotating;
            mode        inside;
        }

        innerInlet
        {
            level       (2 2);
            patchInfo
            {
                type wall;
                inGroups (atmosphere);
            }
        }

        atmosphere_outlet
        {
            level       (2 2);
            patchInfo
            {
                type patch;
                inGroups (atmosphere);
            }
        }

        rotorBlades
        {
            level       (4 4);
            patchInfo
            {
                type wall;
                inGroups (movingWalls);
            }
            faceZone rotorBlades;
            faceType baffle;
        }

        walls
        {
            level       (2 3);
            patchInfo
            {
                type wall;
                inGroups (staticWalls);
            }
        }

        window
        {
            level       (3 4);
            patchInfo
            {
                type wall;
                inGroups (staticWalls);
            }
        }

    }
    refinementRegions
    {
        couple
        {
            mode inside;
            levels ((1 2)); // 1 3
        }
	    indoor_volume
        {
            mode inside;
            levels ((1 3)); // 1 3
        }
    }
    resolveFeatureAngle 30;

    insidePoint (1 1 1);

    allowFreeStandingZoneFaces true;
}

